global
    daemon

defaults
        mode http
        timeout connect 5000
        timeout client 50000
        timeout server 50000

listen stats
        bind *:8081
        stats enable
        stats uri /

frontend dynamo-frontend
        bind *:8080
        default_backend dynamo-backend

backend dynamo-backend
        balance roundrobin
{{ range services }}{{ if .Tags | contains "dynamo" }}{{ range service .Name }}{{ if eq .Port 8080 }}
        server {{ .ID }} {{ .Address }}:{{ .Port }}
{{ end }}{{ end }}{{ end }}{{ end }}


 